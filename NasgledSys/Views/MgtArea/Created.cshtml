@model NasgledSys.Models.Area
@using NasgledSys.Models;
@{
    ViewBag.Title = "Area";
    Layout = "~/Views/Shared/_UserLayout.cshtml";
}
<link href="~/Content/datatables/dataTables.bootstrap.css" rel="stylesheet" />
<script src="~/Content/datatables/jquery.dataTables.js"></script>
<script src="~/Content/datatables/dataTables.bootstrap.js"></script>
<script type="text/javascript">


        var CityListVM;
        $(function () {

            CityListVM = {
                dt: null,

                init: function () {
                    dt = $('#Citys-data-table').DataTable({
                        "serverSide": true,
                        "processing": true,
                        "ajax": {
                            "url": "@Url.Action("MgtArea", "GetArea")",
                            "data": function (data) {

                                data.AreaKey = $("#AreaKey").val();
                                data.AreaName = $("#AreaName").val();
                                data.SubArea = $("#SubArea").val();
                            }
                        },
                        "columns": [

                            { "title": "Area Name", "data": "AreaName", "searchable": true, "sortable": true },
                            { "title": "Sub Area", "data": "SubArea", "searchable": false, "sortable": false },
                            {
                                "title": "Add Products",
                                "data": "AreaKey",
                                "searchable": false,
                                "sortable": false,
                                "render": function (data, type, full, meta) {
                                    return '<a href="@Url.Action("Create", "MgtAddProducts")?id=' + data + '" class="btn btn-success btn-xlg col-lg-6">Add Products</a>';
                                }
                            },
                            {
                                "title": "View Area",
                                "data": "AreaKey",
                                "searchable": false,
                                "sortable": false,
                                "render": function (data, type, full, meta) {
                                    return '<a href="@Url.Action("Edit", "MgtArea")?id=' + data + '" class="btn btn-info btn-xlg col-lg-6">View Area</a>';
                                }
                            }
                        ],
                        "lengthMenu": [[10, 25, 50, 100], [10, 25, 50, 100]],
                    });
                },

                refresh: function () {
                    dt.ajax.reload();
                }
            }

            // Advanced Search Modal Search button click handler
            $('#btnPerformAdvancedSearch').on("click", CityListVM.refresh);

            // initialize the datatables
            CityListVM.init();



        });







</script>
@section CenterTitle{
    @Html.DisplayFor(m => GlobalClass.Project.ProjectName)
}
@section SideBar{
    <center>

        <span class="heading-text">

            <i class="icon-folder-download position-left"></i>  <a class="h4" href="@Url.Action("Created","MgtProject",new { id=GlobalClass.Project.ProjectKey})">Projects</a>
            <label>></label>
            <a class="h4" href="@Url.Action("Edit","MgtArea",new { id=Model.AreaKey})">Areas</a>

        </span>
        <span class="heading-text">
            <a class="btn btn-primary" href="@Url.Action("Create","MgtAddProducts",new { id=Model.AreaKey})"><i class="add-on"></i>Add Product</a>
        </span>
    </center>


}
<div class="content-wrapper">
    <div class="row">
        <div class="col-md-2">&nbsp;</div>
        <div class="col-md-8">
            <div class="panel panel-default">
                <div class="panel-heading">
                    <ul class="nav nav-pills">
                        <li class="active"><a href="@Url.Action("Edit","MgtArea",new { id=Model.AreaKey})" data-toggle="tab">Area</a></li>
                        <li><a href="#" data-toggle="tab">Product</a></li>
                        <li><a href="#" data-toggle="tab">Details</a></li>
                        <li><a href="@Url.Action("Index","MgtSubArea",new { id=Model.AreaKey})" data-toggle="tab">Sub-Areas</a></li>
                        <li><a href="#" data-toggle="tab">Photos</a></li>
                        <li><a href="#" data-toggle="tab">Documents</a></li>
                        <li><a href="#" data-toggle="tab">Notes</a></li>
                        <li><a href="#" data-toggle="tab">Copy</a></li>

                    </ul>
                </div>
                <div class="panel-body">
                    <div class="tab-content">
                        <div class="tab-pane fade in active" id="tab-demo1">

                            <div class="panel-body">
                                <div class="row"><br /><br /></div>
                                <div class="alert alert-info"> To add your first area click on the "Add Area" button above</div>
                            </div>

                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-2">&nbsp;</div>
    </div>
</div>