                                    <li><a href="#" data-toggle="tab">Schedule</a></li>
                                </ul>
                            </div>
                            <div class="col-md-6">
                                <a class="btn btn-success btn-xlg col-lg-12" href="@Url.Action("Create","MgtArea",new { id=GlobalClass.Project.ProjectKey})"><i class="add-on"></i>Add Area</a>
