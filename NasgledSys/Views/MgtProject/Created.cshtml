    @Html.DisplayFor(m=>GlobalClass.Project.ProjectName)
}
@section SideBar{
    <center>
       
            <span class="heading-text">
              
                    <i class="icon-folder-download position-left"></i>  <a class="h4" href="@Url.Action("Create","MgtProject",new { id=GlobalClass.Project.ProjectKey})">Projects</a>
              
