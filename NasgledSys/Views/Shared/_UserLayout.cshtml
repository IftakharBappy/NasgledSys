<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Nasgled</title>
    <link href="https://fonts.googleapis.com/css?family=Roboto:400,300,100,500,700,900" rel="stylesheet" type="text/css">
    @Styles.Render("~/bundles/css")
    @Scripts.Render("~/bundles/bootstrap")

    
    <script type="text/javascript">
        $(document).ready(function () {
         
            $("#ConfirmationMessegeSlot").show().delay(1000).fadeOut();
         
        });

    </script>
</head>

<body class="navbar-top">
    @RenderSection("scripts", required: false)
    @using NasgledSys.Models

    <!-- Main navbar -->
    <div class="navbar navbar-inverse bg-blue navbar-fixed-top">
        <div class="navbar-header">
            <a class="navbar-brand" href="@Url.Action("Userhome","Home")">
                <img src="~/Content/assets/images/logo_light.png" alt="" />
            </a>
            <ul class="nav navbar-nav pull-right visible-xs-block">
                <li><a data-toggle="collapse" data-target="#navbar-mobile"><i class="icon-tree5"></i></a></li>
            </ul>
        </div> 
        <div class="nav navbar-nav navbar-left">
            <ul class="nav navbar-nav navbar-nav-material">
                <li class="active"><a href="@Url.Action("Userhome","Home")"><i class="icon-display4 position-left"></i> Dashboard</a></li>
            </ul>

        </div>
           <div class="navbar-nav navbar-center">@RenderSection("CenterTitle", required: false)</div>
        <div class="nav navbar-nav navbar-right">
            <a href="@Url.Action("Index","MgtClientContact")">
                <img src="~/Content/12_-_Address_book-256.png" height="50px" width="45px" />
               
              
            </a>
        </div>    
        <div class="navbar-collapse collapse" id="navbar-mobile">

            <ul class="nav navbar-nav navbar-right">


               

                <li class="dropdown mega-menu">
                    <a href="#" class="dropdown-toggle" data-toggle="dropdown"><i class="icon-user-lock"></i><span>@Html.DisplayFor(m => GlobalClass.ProfileUser.FirstName)</span></a>
                    <div class="dropdown-menu dropdown-content">
                        <div class="dropdown-content-body">
                            <div class="row">
                                
                                    <span class="menu-heading underlined">Settings</span>
                                <div class="col-md-4"><center><a href="@Url.Action("UpdateUserProfile","MgtProfile")"><i class="icon-user"></i><br /> My profile</a></center></div>
                                <div class="col-md-4"><center><a href="@Url.Action("Index","MgtClientContact")"><i class="icon-users"></i><br />Contacts</a></center></div>
                                <div class="col-md-4"><center><a href="@Url.Action("IndexClientCompany","MgtClientCompany")"><i class="icon-meter-fast"></i><br />Company</a></center></div>
                               
                                </div>
                            <div class="row divider"></div>
                            <div class="row">
                                <div class="col-md-4"><a href="@Url.Action("ChangeUsernamePassword", "MgtProfile")"><i class="icon-lock2"></i> Change Password</a></div>
                                <div class="col-md-4"><a href="@Url.Action("UserLogin","Home")"><i class="icon-switch2"></i> Logout</a></div>
                            
                            </div>
                            </div>
                    </div>
                </li>
            </ul>
        </div>
     
    </div>
    <!-- /main navbar -->
   
    <!-- Page header -->
    <div class="page-header">
        <div class="page-header-content">
            <div class="page-title">

                @if (IsSectionDefined(("SideBar")))
                {
                    @RenderSection("SideBar", required: false)
                }
                else
                {
                    <h4>
                        <span class="heading-text pull-left">

                            <span class="position-left"><a href="@Url.Action("Userhome","Home")">Home<<</a></span>
                            <span class="position-left">Hello , @Html.DisplayFor(m => GlobalClass.ProfileUser.FirstName)</span>
                        </span>

                    </h4>
                }
            </div>

           
        </div>
    </div>
    <!-- /page header -->
    <!-- Page container -->
    <div class="page-container">
        <!-- Page content -->
        <div class="page-content">
            <!-- Main content -->
            <div class="content-wrapper">
               
                    <div class="row" id="ConfirmationMessegeSlot">

                        <h3 class="alert alert-info">@Html.DisplayFor(m => Session["GlobalMessege"])</h3>

                    </div>
                
               @RenderBody()
              
              
            </div>
            <!-- /main content -->
        </div>
        <!-- /page content -->
    </div>
    <!-- /page container -->
    <!-- Footer -->
    <div class="footer text-muted">
        &copy; @DateTime.Now.Year - NasGLED

    </div>
    <!-- /footer -->

</body>
</html>
