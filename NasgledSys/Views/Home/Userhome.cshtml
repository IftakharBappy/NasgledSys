
@{
    ViewBag.Title = "Dashboard";
    Layout = "~/Views/Shared/_UserLayout.cshtml";
}

<style>
    .thumbnail {
        padding: 0;
        height: auto;
    }
</style>
<script>
    var baseList = [];
    var filteredList = [];
    $(document).ready(function () {
       
        $('#ViewBy').hide();

        $(".notice").click(function () {
            if ($('#ViewBy').is(":visible")) {
                $('#ViewBy').hide();
            } else {
                $('#ViewBy').show();
            }
           
        });
        GetProjectListData();
        GetAllCompanyName();
    });
    function search() {
        filteredList = [];
        var searchText = $("#searchText").val().toLowerCase();
        if (searchText == "") {
            filteredList = baseList;
            remakeGrid();
        }
        else {
            baseList.forEach(function (item) {
                if (item.ProjectName.toLowerCase().includes(searchText)) {
                    filteredList.push(item);
                }
            });
            remakeGrid();
        }
    }
    function GetAllCompanyName() {
        $.ajax({
            traditional: true,
            type: "post",
            dataType: "json",
            contentType: "application/json",
            url: "/MgtClientCompany/GetClientCompanyListData/",
            //data: JSON.stringify({ clientCompanyKey: '#' }),
            success: function (data) {
                baseList = data;
                filteredList = data;
                remakeGridCompany();
            },
            error: function (xhr, textStatus, errorThrown) {
                console.log("Error on ajax call");
            }
        });
    }
    function remakeGridCompany() {
        var res = "";
        res = res + "<div class='col-md-2'><a  href='/Home/Userhome'>All</a></div>";

       

        for (var i = 0; i < filteredList.length; i++) {
            res = res + "<div class='col-md-3'>"
             
              
                + "<a href='/Home/ProjectByCompany?id=" + filteredList[i].ClientCompanyKey + "' >" + filteredList[i].CompanyName + "</a>"
               
                + "</div >";
        }
        res = res + "<div class='col-md-2'><label>Select Company</label></div>";
        $("#comp").html(res);
    }
    function remakeGrid() {
        var res = "";
        $("#elementContainer").html("");

        for (var i = 0; i < filteredList.length; i++) {
            res = res + "<div class='col-xs-18 col-sm-6 col-md-3'>"
                + "<div class='thumbnail' >"
                + "<div class='caption'>"
              
                + "<h4>" + filteredList[i].ProjectName + "</h4>"
                +  filteredList[i].CompanyName + "<br/>" + filteredList[i].ProjectStatus + "<br/>" + filteredList[i].AdminName + "<br/>" + filteredList[i].AreaNum + " areas <br/>"
                + filteredList[i].ExsistingProduct + " Existing Products <br/>"
                +"<div class='panel-footer' style='margin-top:5em;'>"
                + "<a href='/MgtProject/Edit?id=" + filteredList[i].ProjectKey + "' class='btn btn-default' role='button'>View</a> &nbsp"
              
                + "<a href='/MgtProject/Create?id=" + filteredList[i].ProjectKey + "' class='btn btn-primary btn-xs' role='button'>Edit</a>"
                + "</div></div>"
                + "</div >"
                + "</div >";
        }
        $("#elementContainer").html(res);
    }
    function GetProjectListData() {
        $.ajax({
            traditional: true,
            type: "post",
            dataType: "json",
            contentType: "application/json",
            url: "/Home/GetProjectListData/",
            //data: JSON.stringify({ clientCompanyKey: '#' }),
            success: function (data) {
                baseList = data;
                filteredList = data;
                remakeGrid();
            },
            error: function (xhr, textStatus, errorThrown) {
                console.log("Error on ajax call");
            }
        });
    }
</script>
@section CenterTitle{
    My Projects
    }

<div class="panel panel-flat">
   
