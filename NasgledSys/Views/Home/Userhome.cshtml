        <div class="row">
            <div class="col-md-6">
                <input id="searchText" type="text" class="form-control" placeholder="Search for Project Here" onkeyup="search()" />
            </div>
            <div class="col-md-3">
                <a class="notice" href="#"><i class="icon icon-sort"></i> View By</a>
            </div>

            <div class="col-md-3">
