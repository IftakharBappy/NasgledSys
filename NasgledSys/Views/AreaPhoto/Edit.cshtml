@model NasgledSys.Models.AreaPhotoViewModel
@using NasgledSys.Models;
@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_UserLayout.cshtml";
}

<script type="text/javascript" src="~/Scripts/jquery.unobtrusive-ajax.js"></script>
<script type="text/javascript" src="~/Content/assets/js/plugins/notifications/bootbox.min.js"></script>
<script type="text/javascript" src="~/Content/assets/js/plugins/notifications/sweet_alert.min.js"></script>
<script type="text/javascript" src="~/Content/assets/js/pages/components_modals.js"></script>
<script type="text/javascript" src="~/Content/assets/js/plugins/ui/prism.min.js"></script>
<script src="~/Scripts/jquery.maskedinput.js"></script>

 


@section CenterTitle{
    @ViewBag.heading
}
@section SideBar{
    <center>

        <span class="heading-text">

            <i class="icon-folder-download position-left"></i>  <a class="h4" href="@Url.Action("Edit","AreaPhoto",new { id=GlobalClass.Project.ProjectKey})">Projects</a>
            <label>></label>
            <a class="h4" href="@Url.Action("Edit","AreaPhoto",new { id=GlobalClass.Project.ProjectKey})">Areas</a>

        </span>
        <span class="heading-text">
            <a class="btn btn-primary" href="@Url.Action("Create","MgtAddProducts",new { id=Model.AreaKey})"><i class="add-on"></i>Add Product</a>
        </span>
    </center>


}
<div class="content-wrapper">
    @using (Html.BeginForm("Edit", "AreaPhoto", FormMethod.Post, new { enctype = "multipart/form-data", @id = "thisForm" }))
    {
        @Html.ValidationSummary()
        @Html.HiddenFor(m => m.AreaKey, new { id = "AreaKey" })
        @Html.HiddenFor(m => m.PhotoKey, new { id = "PhotoKey" })
        

        <div class="form-horizontal">
            <div class="row">
                <div class="col-md-2">&nbsp;</div>
                <div class="col-md-8">
                    <div class="panel panel-default">
                        <div class="panel-heading">
                            <ul class="nav nav-pills">
                                <li><a href="@Url.Action("Edit", "MgtSubArea", new { id = Model.AreaKey })">Area</a></li>
                                <li><a href="@Url.Action("Index", "MgtAddProducts", new { id = Model.AreaKey })">Product</a></li>
                                <li><a href="@Url.Action("Edit", "AreaDetail", new { id = Model.AreaKey })">Details</a></li>
                                <li><a href="@Url.Action("Index", "MgtSubArea", new { id = Model.AreaKey })">Sub-Areas</a></li>
                               
                                <li class="active"><a href="#" data-toggle="tab">Photos</a></li>
                                <li><a href="#">Documents</a></li>
                                <li><a href="#">Notes</a></li>
                                <li><a href="#">Copy</a></li>

                            </ul>
                        </div>
                        <div class="panel-body">
                            <div class="tab-content">
                                <div class="tab-pane fade in active" id="tab-demo1">

                                    <div class="panel-heading">
                                        <div class="col-md-8"><h3>Area Photo</h3></div>
                                        <div class="col-md-4">
                                            <button type="submit" class="btn btn-primary btn-xlg col-lg-8" id="btnAdd">Add</button>
                                        </div>
                                    </div>
                                    <div class="panel-body">
                                        <div class="form-group">
                                            <div class="h3 alert-info" id="deletemsg"></div>
                                        </div>
                                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                                        <div class="form-group">
                                            
                                            <label for="PostedLogo" class="btn btn-primary btn-xlg col-md-4 col-md-offset-2">Select a new Photo</label>
                                            <input id="PostedLogo" name="PostedLogo" style="visibility:hidden;" type="file">
                                        </div>


                                        <div class="form-group">
                                            <table>

                                                <tbody>

                                                    @foreach (var item in Model.AreaPhotoList)
                {
                                                        <tr>
                                                            <td>
                                                                @{
                                                                var base64 = Convert.ToBase64String(item.FileContent);
                                                                var imgSrc = String.Format("data:image/jpg;base64,{0}", base64);
                                                                    <img src='@imgSrc' style="max-height:50px;border-radius: 10px;" />
                                                                }
                                                            </td>
                                                            <td>
                                                                <div class="form-group">
                                                                    @Html.LabelFor(model => model.Description)
                                                                    @Html.TextBoxFor(model => model.Description, new { placeholder = "description area", id = "Description", @class = "form-control" })

                                                                    @Html.ValidationMessageFor(model => model.Description, "", new { @class = "text-danger" })
                                                                </div>
                                                            </td>


                                                            <td>
                                                                @*<label for="PostedLogo" class="btn btn-primary btn-xlg col-md-4 col-md-offset-2">Select a new avatar to update profile</label>*@
                                                                <input id="PostedLogo" name="PostedLogo" style="visibility:hidden;" type="file">
                                                                <button type="button" id="btnUpdate" class="btn btn-primary" onclick="location.href='@Url.Action("Edit","MgtEnvironmentalImpact", new { id = item.AreaKey })'">Change Photo</button>
                                                                @*<a href="@Url.Action("Delete", "MgtArea",new { id=Model.AreaKey})" class="btn btn-info btn-xlg col-lg-12" role="button" onclick="return confirm('Are you sure you want to Remove this?')">Save Changes</a>*@
                                                                <button type="button" id="btnUpdate" class="btn btn-primary" onclick="location.href='@Url.Action("Delete","AreaPhoto", new { id = item.PhotoKey })'">Remove Photo</button>
                                                            </td>
                                                            <td>
                                                               
                                                            </td>
                                                        </tr>
                                                                }
                                                </tbody>
                                            </table>

                                        </div>

                                        </div>


                                    <br />
                                    <div class="panel-footer">
                                        <button type="submit" class="btn btn-info btn-xlg col-md-6" id="btnsave" name="btnsave">Save Changes</button>
                                        @*<a href="@Url.Action("Delete", "MgtArea",new { id=Model.AreaKey})" class="btn btn-info btn-xlg col-lg-12" role="button" onclick="return confirm('Are you sure you want to Remove this?')">Save Changes</a>*@
                                    </div>

                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-md-2">&nbsp;</div>
            </div>
        </div>


       
                                                                    }





</div>


