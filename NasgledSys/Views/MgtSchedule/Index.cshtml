<div class="content-wrapper">
    <div class="row">
        <div class="col-md-2">&nbsp;</div>
        <div class="col-md-8">
            <div class="panel panel-default">
                <div class="panel-heading">
                    <ul class="nav nav-pills">
                        <li class="active"><a href="#tab-demo1" data-toggle="tab">Audit</a></li>
                        <li><a href="#" data-toggle="tab">Proposal</a></li>
                        <li><a href="#" data-toggle="tab">Team</a></li>
                    </ul>
                </div>
                <div class="panel-body">
                    <div class="tab-content">
                        <div class="tab-pane fade in active" id="tab-demo1">
                                <div class="panel-heading">
                                    <div class="panel-title pull-left">

                                        <ul class="nav nav-pills">
                                            <li><a href="@Url.Action("Created","MgtProject",new { id= @ViewBag.ProjectKey})">Areas</a></li>
                                            <li><a href="@Url.Action("Existing","MgtProject",new { id= @ViewBag.ProjectKey})">Existing</a></li>
                                            <li class="active"><a href="#tab-demo2" data-toggle="tab">Schedule</a></li>
                                        </ul>
                                    </div>
                                    <div class="panel-title pull-right">
                                        <a href="@Url.Action("Create","MgtArea",new { id= @ViewBag.ProjectKey})" class="btn border-success btn-xlg col-md-12" role="button">Add Area</a>
                                    </div>
                                </div>
                                </diV>
                                <div class="tab-pane fade in active" id="tab-demo2" style="margin-top:5em;">
                                    @*Operating*@
                                    <div class="panel panel-flat">
                                        <div class="panel-title">
                                            <div class="panel-title pull-left">
                                                <h6>
                                                    <i class="icon-arrow-left52 position-left"></i>
                                                    <span class="text-semibold">Operating</span>
                                                </h6>

                                            </div>
                                            <div class="panel-title pull-right">
                                                <a href="@Url.Action("CreateOS","MgtSchedule",new { id= @ViewBag.ProjectKey })" class="btn border-success btn-xlg col-md-12" role="button">Add Operating Schedule</a>
                                            </div>
                                            <div class="clearfix"></div>
                                        </div>
                                        <div class="panel-body">
                                            <table class="table table-bordered table-hover datatable-highlight" id="ctable">
                                                <thead><tr><th>Name</th><th>Details</th><th>Default</th><th>Edit</th></tr></thead>
                                                <tbody>

                                                    @foreach (var item in ViewBag.OperatingSchedules)
                                                    {
                                                        <tr>
                                                            <td>
                                                                @item.OPName
                                                            </td>
                                                            <td>
                                                                @item.AnnualOperationHour
                                                            </td>
                                                            <td>
                                                                @{
                                                                    if (@item.IsDefault == false)
                                                                    {
                                                                        <a href="@Url.Action("SetDefaultOS","MgtSchedule",new { id= @item.PKey })">Set As Default</a>
                                                                    }
                                                                    else
                                                                    {
                                                                        <text>Current Default</text>
                                                                    }
                                                                }
                                                            </td>
                                                            <td>
                                                               
                                                                <a href="@Url.Action("EditOS","MgtSchedule",new { id= @item.PKey })" class="btn btn-primary" role="button">Edit</a>
                                                            </td>
                                                        </tr>
                                                                    }

                                                </tbody>
                                            </table>
                                        </div>
                                        </div>

