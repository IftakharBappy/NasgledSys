@*@using nasgledsys.models;*@
@{
    ViewBag.Title = "Schedule";
    Layout = "~/Views/Shared/_UserLayout.cshtml";
}

<link href="~/Content/datatables/dataTables.bootstrap.css" rel="stylesheet" />
