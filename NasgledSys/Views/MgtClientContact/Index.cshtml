@model NasgledSys.Models.ClientContactClass
@{
    ViewBag.Title = "Contact Details";
    Layout = "~/Views/Shared/_UserLayout.cshtml";
}
<script src="~/Scripts/jquery.unobtrusive-ajax.js"></script>
<script type="text/javascript" src="~/Content/assets/js/pages/datatables_advanced.js"></script>

<script type="text/javascript">
    $(document).ready(function () {
      
    });
</script>
@section SideBar{
    <div class="panel-body">
        <button type="button" class="btn btn-primary" data-toggle="" data-target="" onclick="location.href='@Url.Action("Create","MgtClientContact")'">Add New Contact Info</button>
    
</div>

}

@section CenterTitle{
    Profile
}
<div class="row">
    <div class="col-md-2">
        &nbsp;
    </div>
    @using (Html.BeginForm("Index", "MgtClientContact", FormMethod.Post, new { @class = "form-horizontal" }))
    {
        
        <div class="panel panel-primary col-md-8">
            <div class="panel-body">
                <h4>
                    <span class="heading-text pull-left">
                        <i class="icon-download10 position-left"></i>
                        <span class="position-left"><a href="@Url.Action("Index","MgtClientContact")">Contact > </a></span>

                    </span>

                </h4>
                </div>
                <div class="panel-heading">
                    <h3>Contact Setup</h3>
                </div>
                <div class="panel-body">
                    @foreach (var item in Model.ClientContactList)
                {
                        <div class="col-xs-18 col-sm-6 col-md-3">
                            <div class="thumbnail">
                                <div class="caption">
                                    @Html.DisplayFor(modelItem => item.FirstName) @Html.DisplayFor(modelItem => item.LastName)
                                </div>
                                <div class="description">
                                    <span class="glyphicon glyphicon-envelope" style="color:orangered;margin-left:1em;"> @Html.DisplayFor(modelItem => item.Email) </span>
                                    <span class="glyphicon glyphicon-home" style="color:indianred;margin-left:1em;"> @Html.DisplayFor(modelItem => item.Address) </span>
                                </div>
                                <div class="modal-footer" style="margin-top:5em;">
                                    <button type="button" class="btn btn-primary" onclick="location.href='@Url.Action("Details","MgtClientContact" , new { ContactKey = item.ContactKey })'">View</button>
                                    <button type="button" id="btnUpdate" class="btn btn-primary" onclick="location.href='@Url.Action("Edit","MgtClientContact", new { ContactKey = item.ContactKey })'">Edit</button>
                                </div>
                            </div>
                        </div>
                    }
                </div>

                <div class="panel-footer">

                </div>

            </div>

    }
    <div class="col-md-2">
        &nbsp;
    </div>
</div>