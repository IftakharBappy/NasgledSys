@model IEnumerable<NasgledSys.Models.Forms>
@{
    ViewBag.Title = "Forms";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}
<link href="~/Content/datatables/dataTables.bootstrap.css" rel="stylesheet" />
@section scripts{
    <script src="~/Content/datatables/jquery.dataTables.js"></script>
    <script src="~/Content/datatables/dataTables.bootstrap.js"></script>
    <script type="text/javascript">
        $(function () {

            $('#ctable').DataTable();

        });

    </script>
}
@section SideBar{
    <h4>
        <i class="icon-arrow-left52 position-left"></i>
        <span class="text-semibold">Forms</span> - List of Forms
        <small class="display-block"><a href="@Url.Action("Create","MgtForms")"><i class="icon-display4 position-left"></i> Add new Form</a></small>
    </h4>
}



<div class="panel panel-flat">
    <div class="panel-heading">
        <h5 class="panel-title">List of Forms</h5>
        <div class="heading-elements">
            <ul class="icons-list">
                <li><a data-action="collapse"></a></li>
                <li><a data-action="reload"></a></li>

            </ul>
        </div>
    </div>

    <table class="table table-bordered table-hover datatable-highlight" id="ctable">
        <thead>
            <tr>
                <th>Module</th>
                <th>Name</th>
                <th>Level</th>
                <th>Controller</th>
                <th>View</th><th>Form Name</th>
                <th></th>
                <th></th>

            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Modules.ModuleName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.FormName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.FormLevel)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.FormController)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.FormView)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.FormName)
                    </td>
                    <td>@Html.ActionLink("Edit", "Edit", "MgtForms", new { id = item.FormID }, null) </td>



                    <td>@Html.ActionLink("Remove", "Delete", "MgtForms", new { id = item.FormID }, new { onclick = "return confirm('Are you sure you want to Remove this?')" })</td>
                </tr>
            }
        </tbody>
    </table>
</div>
