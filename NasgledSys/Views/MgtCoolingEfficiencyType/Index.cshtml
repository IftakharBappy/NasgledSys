@model NasgledSys.Models.CoolingEfficiencyTypeClass

@{
    ViewBag.Title = "List";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<script src="~/Scripts/AutoComplete/scCity.js"></script>
<link href="~/Content/datatables/dataTables.bootstrap.css" rel="stylesheet" />

<script src="~/Content/datatables/jquery.dataTables.js"></script>
<script src="~/Content/datatables/dataTables.bootstrap.js"></script>
<script type="text/javascript">
<script src="~/Scripts/AutoComplete/scCity.js"></script>
    $(document).ready(function () {
        $(".discussion-comment").click(function (event) {
                //alert($(this).attr("discussion-id"));
                $('#PKey').val($(this).attr("discussion-id"));
                $('#myModal').modal('show');
                $('#btnUpdate').show();
                $('#btnAdd').hide();
                var w = "#PKey";

                var url = '@Url.Content("~/")' + "Utility/LoadCoolingEfficiencyTypeData";
                $.getJSON(url, { SelectID: $(w).val() }, function (data) {


                    $('#TypeName').val(data["TypeName"]);
                    $('#Description').val(data["Description"]);
                });

        });
        $("Add").click(function () {
                alert("The paragraph was clicked.");
            });
        });
        $(function () {

            $('#ctable').DataTable();

        });

</script>

@section SideBar{
    <h4>
        <i class="icon-arrow-left52 position-left"></i>
        <span class="text-semibold">List of CoolingEfficiencyType</span>

    </h4>
}
<div class="panel panel-flat">
    <div class="panel-heading">
        <h5 class="panel-title">List of CoolingEfficiencyType</h5>
        <div class="heading-elements">
            <ul class="icons-list">
                <li><a data-action="collapse"></a></li>
                <li><a data-action="reload"></a></li>

            </ul>
        </div>
    </div>
    <div class="panel-body">
        <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#myModal" onclick="clearTextBox();">Add New CoolingEfficiencyType</button>
    </div>

    <table class="table table-bordered table-hover datatable-highlight" id="ctable">
        <thead><tr><th>Name</th><th>Descripption</th><th>Action</th></tr></thead>
        <tbody>
            @foreach (var item in Model.CoolingEfficiencyTypeList)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.TypeName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Description)
                    </td>


                    <td>
                        <a class="discussion-comment" discussion-id="@item.PKey" href="#">Edit</a> ||
                        |

                        <a href="@Url.Action("Delete", "CoolingEfficiencyType",new{id=item.PKey})" onclick="return confirm('Are you sure you want to Remove this?')">Delete</a>
                    </td>


                </tr>
            }
        </tbody>
    </table>


    <div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal">×</button>
                    <h4 class="modal-title" id="myModalLabel">Add New City</h4>
                </div>
                <div class="modal-body">
                    <form>
                        <div class="form-group">
                            @Html.LabelFor(model => model.TypeName)
                            @Html.HiddenFor(model => model.PKey, new { id = "Pkey" })
                            @Html.TextBoxFor(model => model.TypeName, new { placeholder = "Name", id = "Name", @class = "form-control" })
                            @Html.ValidationMessageFor(model => model.TypeName, "", new { @class = "text-danger" })

                        </div>
                        <div class="form-group">
                            @Html.LabelFor(model => model.Description)
                            @Html.TextBoxFor(model => model.Description, new { placeholder = "Description", id = "Description", @class = "form-control" })
                            @Html.ValidationMessageFor(model => model.Description, "", new { @class = "text-danger" })
                        </div>
                    </form>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-primary" id="btnAdd" onclick="return Add();">Add</button>
                    <button type="button" class="btn btn-primary" id="btnUpdate" style="display:none;" onclick="Update();">Update</button>
                    <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                </div>
            </div>
        </div>
    </div>
</div>