@model NasgledSys.Models.ProposalSavingViewModel
@using NasgledSys.Models;

@{
    ViewBag.Title = "Proposal Saving";
    Layout = "~/Views/Shared/_UserLayout.cshtml";
}
<link href="~/Content/assets/css/proposalsaving.css" rel="stylesheet" />
@section CenterTitle{
    @Html.DisplayFor(m => GlobalClass.Project.ProjectName) <label>Proposal Saving</label>
}
@section SideBar{
    <center>

        <span class="heading-text">

            <i class="icon-folder-download position-left"></i>
            <a class="h4" href="@Url.Action("SelectCompany","MgtProject",new { id=Model.CompanyKey})">@Html.DisplayFor(m => m.CompanyName)</a> <label>></label>
            <a class="h4" href="@Url.Action("Created","MgtProject",new { id=GlobalClass.Project.ProjectKey})">@GlobalClass.Project.ProjectName</a>
            <label>></label>
            <a class="h4" href="@Url.Action("Index","MgtProposal",new { id=GlobalClass.Project.ProjectKey})">Proposal</a>
        </span>
        <span class="heading-text pull-right">
            <a class="btn btn-primary" href="#"><i class="add-on"></i>Report</a>
        </span>
    </center>


}
<div class="content-wrapper">
    <div class="row">
        <div class="col-md-2">&nbsp;</div>
        <div class="col-md-8">
            <div class="panel panel-default">
                <div class="panel-heading">
                    <ul class="nav nav-pills">

                        <li><a href="@Url.Action("Summary","MgtProposal",new { id=Model.ProposalKey})">Summary</a></li>
                        <li><a href="@Url.Action("Index","MgtProposalSolution",new { id=Model.ProposalKey})">Solutions</a></li>
                        <li><a href="@Url.Action("Cost","MgtProposal",new { id=Model.ProposalKey})">Cost</a></li>
                        <li class="active"><a href="@Url.Action("Saving","MgtProposalSaving",new { id=Model.ProposalKey})">Saving</a></li>

                       

                        <li><a href="@Url.Action("Finance","MgtProposal",new { id=Model.ProposalKey})">Financing</a></li>
                        <li><a href="@Url.Action("Customize","MgtProposalCustomize",new { id=Model.ProposalKey})">Customize</a></li>
                        <li><a href="@Url.Action("Notes","MgtProposal",new { id=Model.ProposalKey})">Notes</a></li>

                        <li><a href="@Url.Action("Report","ProposalReport",new { id=Model.ProposalKey})">Reports</a></li>  

                    </ul>
                </div>
            <div class="panel-body">
                <div class="tab-content">

                    <div class="col-md-6">
                        <div class="panel panel-default">
                            <div class="panel-heading">
                                <h3>Annual Cost Savings</h3>
                                you will save $ @Model.AnnualCost every Year
                            </div>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="panel panel-default">
                            <div class="panel-heading">
                                <h3>Annual Energy Saving</h3>
                                You will use @Model.AnnualEnergy less kWh's every year .
                            </div>
                        </div>

                    </div>
                    <div class="col-md-12">
                        <div class="panel panel-default">
                                <div class="panel-heading">
                                    <h3>Environmental Impact</h3>
                                    </div>
                            <div class="panel-body">
                                <div class="col-md-6">
                                    <h5>You will reduce your carbon emmissions by</h5>
                                    <p>which is equal to the following:</p>
                                </div>
                                <div class="col-md-3" style="float:right">
                                    <h3>@Model.ReduceCarbon Tons</h3>
                                    <P>Each Year</P>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-12">
                                    @foreach (var item in ViewBag.Env)
                                    {

                                        <div class="col-md-4">
                                            <div class="list-group">
                                                <a class="list-group-item google-plus">
                                                    <div class="col-md-1 pull-left" id="image ">

                                                            @{
                                                                var base64 = Convert.ToBase64String(item.Logo);
                                                                var imgSrc = String.Format("data:image/jpg;base64,{0}", base64);
                                                                <img src='@imgSrc'/>
                                                            }

                                                    </div>
                                            <p class="list-group-item-text pull-right">@item.FactorName</p>
                                            <h5 class="list-group-item-heading count">@item.QtyUsed  @item.UnitName</h5>

                                            </a>

                                        </div>
                                        </div>

                                    }
                                @*<span><i class="pull-right icon-chevron-right"></i>@ViewBag.Vehicle</span>*@
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
        </div>
    </div>
